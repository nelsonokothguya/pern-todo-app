{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es6"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "spec/**/*.ts"],
    "exclude": ["node_modules"]
}

